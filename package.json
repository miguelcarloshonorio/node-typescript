{
  "name": "node-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src/ --exec \"ts-node src/entry.ts\" -e ts",
    "test": "jest --no-cache",
    "build": "tsc",
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
