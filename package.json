    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "keywords": [],
  "author": "Micajeho",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/supertest": "^2.0.8",
    "bcrypt": "^3.0.7",
    "date-diff": "^0.2.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "moment": "^2.24.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "husky": "^3.1.0"
  }
